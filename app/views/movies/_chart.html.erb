    <canvas id="bar-chart" ></canvas>
            <script>

            <% names =  Array.new %>
            <% vii = Array.new %>
            <% @ratings.limit(3).each do |m|%>
            <% names.push(m.title) %>
            <% vii.push(m.rating) %>
            <% end %>
            new Chart(document.getElementById("bar-chart"), {
                type: 'bar',
                data: {
                  labels:<%= names.inspect.html_safe %>,
                  datasets: [{
                    label: "Ratings",
                    backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#000f"],
                    data:<%= vii.inspect.html_safe %>
                    
                  }]
                },
                     options: {
                       scales: {
                          yAxes: [{
                             ticks: {
                        beginAtZero:true
                                  }
                               }]
                            }
                         }

                      });
            </script>
    

