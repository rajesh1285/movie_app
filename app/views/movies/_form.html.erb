

<%= form_for @movie , html: { multipart: true } do |form| %>


  <div class="form-group">
    <%= form.label :title %><span class="glyphicon glyphicon-film"></span><br>

    <%= form.text_field :title ,class: "form-control" ,placeholder: "Enter title"%>
    
  </div>
 
  <div class="form-group">
    <%= form.label :polt %><br>
    <%= form.text_field :plot ,class: "form-control" ,placeholder: "Enter plot" %>
  </div>
 <div class="form-group">
    <%= form.label :genr %><br>
    <%= form.text_field :genr ,class: "form-control",placeholder: "Enter gener" %>
  </div>
  <div class="form-group">
    <%= form.label :cast %><br>
    <%= form.text_area :cast ,class: "form-control",placeholder: "Enter cast"%>
  </div>
  <div class="form-group">
    <%= form.label :year %><br>
    <%= form.text_field :year ,class: "form-control",placeholder: "Enter Year" %>
  </div>
  <div class="form-group">
    <%= form.label :Rating%><span class="glyphicon glyphicon-star"></span><br>
    <%= form.text_field :rating,class: "form-control",placeholder: "Enter integers" %>
  </div>

   <div class="form-group">
    <%= form.label :image %><span class="glyphicon glyphicon-picture"></span><br>
    <%= form.file_field :image ,class: "form-control"  %>
   </div>
  <div class="form-group">
    <%= form.submit class: "form-control btn btn-primary"%>
  </div>
<% end %>

