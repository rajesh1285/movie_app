<div class="container" style="padding-top: 0px;">
      
			  <h1>New movies</h1>

			       <%= render 'partials/navbar'%>
			       <div class="row">
				 <div class="col-md-6">
			
				    <img src="<%= @movie.image_url%>">

	             </div>

                  
	             <div class="col-md-3">

					   <h3>
					  <%= @movie.title %>
					  </h3>
				 
					<h3>
					  <strong>Plot:</strong></h3>
					  <h4><%= @movie.plot %></h4>
					
					<h3>
					  <strong>cast:</strong></h3>
					  <h4><%= @movie.cast %></h4>
					
					<h3>
					  <strong>gener:</strong></h3>
					 <h4> <%= @movie.genr %></h4>
					
                      <h3>
					  <strong>year:</strong></h3>
					  <h4><%= @movie.year %></h4>
					

					
			</div>
			     <div class="col-md-3">
			     <%= image_tag 'rating.png' ,class: "rating-show-image"%><h4 class= "rating-show"></h4>
			    <h3>Rating: <%= @movie.rating %>/10</h3>	
             </div>
        </div>

                <div class="col-md-12">
				    <div>
				        <a href="<%= @movie.website%>" class="btn btn-primary web-show" style="float: right;" target="_blank">Website</a>

				    </div>

				 </div>

           


      
        
	    
	        	
              	<div class="col-md-6 reviews">
	              	
	              		
					<%if @movie.reviews.present? %>
	              	       
		              		<div class="row back-color">
		              		

			              	   <%= render @movie.reviews.limit(4) %>
			              		
								  
								  <!-- Trigger the modal with a button -->
									  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" style="float: right;" >more reviews</button>
	                    

									  <!-- Modal -->
									  <div class="modal fade" id="myModal" role="dialog">
									    <div class="modal-dialog">
									    
									      <!-- Modal content-->
									      <div class="modal-content">
									        <div class="modal-header">
									          <button type="button" class="close" data-dismiss="modal">&times;</button>
									          <h4 class="modal-title">Reviews</h4>
									        </div>
									        <div class="modal-body">
									          <p><%=render @movie.reviews%></p>
									        </div>
									        <div class="modal-footer">
									          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
									        </div>
									      </div>
									      
									    </div>
								  </div>
								  
							 
			              	    </div>
		          		</div>
		          		<%else%>
		          		<div class="clearfix"></div>
		          		

                <%end%>
            <div class="col-md-6">
				<div class="panel panel-default">
							<div class="panel-heading">
								<h3 class="panel-title">
									<h4>Top 10 list of movies</h4>
								</h3>
							</div>
						<div class="panel-body table-responsive">
							  <table class="table ">
									    <thead>
									      <tr>
									        <th>
									          #
									        </th>
									        <th>
									          Name
									        </th>
									        <th>
									          Genre
									        </th>
									      </tr>
									    </thead>
									    <% @genre_same.each do |genre|%>

										    <tbody  data-spy="scroll"> 
										    	<tr>
										    		<td><%=genre.id%></td>
										    	
										    	
										    	
										    		<td><%=link_to genre.title, movie_path(genre) %></td>
										    	
										    	
										    		<td><%=genre.genr%></td>
										    	</tr>

										    </tbody>
										<%end%>							
									</table>
							</div>
				    </div>
        	</div>
        	<div class="row">
        	<div class="col-md-3">
        		<%= image_tag "user1.png" %>
        	</div>
	        	             <div class="col-md-9 ">
				             	<%= render 'reviews/form'%>
				             </div>
		          	</div>
	          </div> 
	          	</div>
         
        </div>

		           
			           	 
		           </div>
		   
	    


	               <div class="container">
	                   <%= render 'partials/footer' %>
	                </div>
</div>   
		


