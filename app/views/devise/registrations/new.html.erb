 

  
<div class="continer" > 
    
  <div id="login" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3" style="background: darkgray;">
  <div class="pannel">
    <div class="row">
      <div class="iconmelon">
        
      </div>
    </div>
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

       
      
          <div class="col-md-6" >
             <div class="col-md-6 ">

            <%= image_tag "user.jpg" ,id: "profile-img-tag" ,class: "img-responsive img-thumbnail img-rounded"%>
            
            </div>
               
             

               </div>

          
          

               

     <div class="form-group">
        <br />
        <%= f.file_field :image , autofocus: true ,class: "form-control", id: "profile-img"%>
      </div>
      <div class="form-group">
        <%= f.label :name %><span class="glyphicon glyphicon-user"></span><br />
        <%= f.text_field :name, autofocus: true ,class: "form-control" ,placeholder: "Enter name" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><span class="glyphicon glyphicon-envelope"></span><br />
        <%= f.email_field :email, autofocus: true ,class: "form-control" ,placeholder: "Enter email"%>
      </div>

      <div class="form-group"><span class="glyphicon glyphicon-asterisk"></span>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" ,class: "form-control" ,placeholder: "Enter password" %>
      </div>

      <div class="form-group"><span class="glyphicon glyphicon-asterisk"></span>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control" ,placeholder: "Enter password again" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up" ,class: "form-control btn btn-primary"%>
      </div>
      <div class="col-md-2 ">
            
            <%=link_to (image_tag "fb.png"), user_facebook_omniauth_authorize_path, class: "img-responsive img-thumbnail img-rounded"%>
            
            </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
</div>


</div>



<script type="text/javascript">
    function readURL(input) {
     
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function (e) {
                $('#profile-img-tag').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $(document).ready(function(){

      $("#profile-img").change(function(){

        readURL(this);
    });  
    });
   
</script>